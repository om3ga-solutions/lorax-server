{
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["warn", 2],
    "linebreak-style": "off",
    "quotes": "off",
    "semi": ["error", "always"],
    "comma-dangle": "off",
    "no-cond-assign": "off",
    "no-console": "off",
    "no-undef": "error"
  },
  "env": {
    "node": true
  }
}
